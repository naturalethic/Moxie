{
    "name": "moxie",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build && uglifyjs dist/index.js -b --in-situ && biome check --apply-unsafe --max-diagnostics=0 dist/index.js",
        "analyze": "vite-bundle-visualizer",
        "preview": "vite preview",
        "test:unit": "vitest",
        "test:integration": "vitest run --root test",
        "test:mox:build": "GOBIN=$PWD/.mox/bin CGO_ENABLED=0 go install github.com/mjl-/mox@latest",
        "test:mox:clean": "rm -rf ./.mox/data",
        "test:mox:serve": ".mox/bin/mox localserve -dir ./.mox/data"
    },
    "dependencies": {
        "@biomejs/biome": "^1.3.3",
        "autoprefixer": "^10.4.16",
        "solid-js": "^1.8.5",
        "tailwindcss": "^3.3.5",
        "typescript": "^5.2.2",
        "uglify-js": "^3.17.4",
        "valibot": "github:fabian-hiller/valibot",
        "vite": "^4.5.0",
        "vite-bundle-visualizer": "^0.10.0",
        "vite-plugin-doctest": "^0.1.1",
        "vite-plugin-solid": "^2.7.2",
        "vite-tsconfig-paths": "^4.2.1",
        "vitest": "^0.34.6"
    }
}
